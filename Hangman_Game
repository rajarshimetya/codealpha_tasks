import random   # To randomly pick a word from the list

def hangman():
    # Step 1: Define a small list of 5 predefined words
    words = ["apple", "tiger", "python", "river", "house"]
    
    # Step 2: Randomly choose a word from the list
    word = random.choice(words)
    
    # Step 3: Create a hidden version of the word (using underscores "_")
    guessed_word = ["_"] * len(word)
    
    # To keep track of guessed letters
    guessed_letters = []
    
    # Step 4: Limit incorrect guesses to 6
   attempts = 6

    print("ğŸ® Welcome to Hangman Game ğŸ®")
    print("Try to guess the word, one letter at a time.")
    print("You have 6 chances only.")
    print("Word: ", " ".join(guessed_word))

    # Step 5: Main game loop
    while attempts > 0 and "_" in guessed_word:
        guess = input("\nEnter a letter: ").lower()

        # Validate input
        if len(guess) != 1 or not guess.isalpha():
            print("âŒ Please enter a single valid letter.")
            continue

        if guess in guessed_letters:
            print("âš ï¸ You already guessed that letter. Try again.")
            continue

        # Store guessed letter
        guessed_letters.append(guess)

        # Check if guess is correct
        if guess in word:
            print("âœ… Good guess!")
            # Replace "_" with the guessed letter in the correct positions
            for i in range(len(word)):
                if word[i] == guess:
                    guessed_word[i] = guess
        else:
            attempts -= 1
            print(f"âŒ Wrong guess! Attempts left: {attempts}")

        # Show progress
        print("Word: ", " ".join(guessed_word))

    # Step 6: Game result
    if "_" not in guessed_word:
        print("\nğŸ‰ Congratulations! You guessed the word:", word)
    else:
        print("\nğŸ’€ Game Over! The word was:", word)


# Run the game
if __name__ == "__main__":
    hangman()
